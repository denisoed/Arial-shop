      //------------- Features --------\\
      +e.DIV.features

        // Search button (The button appears on the screen width of 992)
        +b.DIV.main-menu-search-btn
          +e.SPAN.icon(class="icon-search")
        // Wishlist modal menu  
        +b.DIV.main-menu-wishlist
          +e.SPAN.icon(class="icon-heart")
            +e.DIV.quantity-item 3

          +b.DIV.main-menu-option.opt-wishlist(class="the-modal")
            +e.DIV.opt-title Wishlist
            
            //- Item
            +b.DIV.main-menu-option-item(class="main-menu-option__wishlist")
              +e.DIV.wishlist-info
                +e.IMG.image(src="img/products/shoes.jpeg", alt="Cart item image")
                +e.DIV.name_and_price
