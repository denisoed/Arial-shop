            +e.DIV.opt-title #[span 8] items in your cart
            
            //- Item
            +b.DIV.main-menu-option-item
              +e.IMG.image(src="img/products/shoes.jpeg", alt="Cart item image")
              +e.DIV.name_and_price
                +e.A.name(href="#") lorem ipsum
                +e.SPAN.price $100.00
                +e.SPAN.qty qty: #[span 5]
              +e.SPAN.icon(class="icon-trash")
            //- Item
            +b.DIV.main-menu-option-item
              +e.IMG.image(src="img/products/shoes.jpeg", alt="Cart item image")
              +e.DIV.name_and_price
                +e.A.name(href="#") lorem ipsum
                +e.SPAN.price $100.00
                +e.SPAN.qty qty: #[span 1]
              +e.SPAN.icon(class="icon-trash")
            //- Item
            +b.DIV.main-menu-option-item
              +e.IMG.image(src="img/products/shoes.jpeg", alt="Cart item image")
              +e.DIV.name_and_price
                +e.A.name(href="#") lorem ipsum
                +e.SPAN.price $100.00
                +e.SPAN.qty qty: #[span 2]
              +e.SPAN.icon(class="icon-trash")
                
            +e.DIV.features   
              +e.SPAN.total Total: #[span $800.00]
              +e.DIV.btns
                +main-btn('View cart')
                +main-btn('Checkout')
                 
