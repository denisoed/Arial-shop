            +b.DIV.main-menu-option-item(class="main-menu-option__wishlist")
              +e.DIV.wishlist-info
                +e.IMG.image(src="img/products/shoes.jpeg", alt="Cart item image")
                +e.DIV.name_and_price
                  +e.A.name(href="#") lorem ipsum
                  +e.SPAN.price $100.00
                  +e.SPAN.qty qty: #[span 2]
              +e.DIV.btns  
